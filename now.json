{
  "version": 2,
  "name": "beat-bot",
  "build": {
    "env": {
      "SPOTIFY_CLIENT_ID": "@spotify-client-id",
      "SPOTIFY_CLIENT_SECRET": "@spotify-client-secret"
    }
  },
  "builds": [
    {
      "src": "app/package.json",
      "use": "@now/next"
    },
    {
      "src": "api/*.ts",
      "use": "@now/node"
    },
    { "src": "new_api/index.py", "use": "@now/python" },
    { "src": "new_api/*.py", "use": "@now/python" }
  ],
  "routes": [
    { "src": "/graphql", "dest": "new_api/index.py" },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}
